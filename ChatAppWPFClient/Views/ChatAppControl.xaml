<UserControl x:Class="ChatAppWPFClient.Views.ChatAppControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChatAppWPFClient.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>


        <!--#region Left Column: Titles, Users, Current User info-->

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="50" />
            </Grid.RowDefinitions>


            <!--Titles Grid-->
            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <!--Label and add title button-->
                <Label Grid.Row="0" Content="Titles" FontWeight="SemiBold" />
                <Button Grid.Row="0" Content="Add Title" HorizontalAlignment="Right" />

                <!--Title listview-->
                <ListView Grid.Row="1"  Background="Transparent" BorderThickness="0" />

            </Grid>

            <!--Online Clients Grid-->
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <!--User label-->
                <Label Grid.Row="0" Content="Users" FontWeight="SemiBold" />

                <!--User listview-->
                <ListView Grid.Row="1" DisplayMemberPath="Name" 
                          ItemsSource="{Binding OnlineClients, UpdateSourceTrigger=PropertyChanged}" 
                          SelectedItem="{Binding SelectedUser}"
                          Background="Transparent" 
                          BorderThickness="0" />

            </Grid>
        </Grid>
        <!--#endregion-->
       


    </Grid>
</UserControl>
